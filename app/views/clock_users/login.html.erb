<% @page_title = "Welcome to Time Tracker, Log-in" %>
<div class= "Sign_Form">
	<h1>Log in</h1>
	<%= form_tag(:action => 'login_attempt') do %>
		<p>
		Time Tracker ID:</br> <%= text_field_tag(:login_userId) %>
		</p> 
		
		<p>
		Password:</br> <%= password_field_tag :login_password %>
		</p> 

		<%= submit_tag("Log In") %>
	<% end %>
</div>

	<% if flash[:color]== "valid" %>
		<div class="valid_notice">
			<p><%= flash[:notice]%></p>
		</div>
	<% elsif flash[:color]== "invalid"%>
		<div class="invalid_notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%else%>
		<div class="notice">
			<p><%=flash[:notice]%></p>
		</div>
	<%end%>